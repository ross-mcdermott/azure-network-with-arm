{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located including a trailing '/'"
            },
            "defaultValue": "[deployment().properties.templateLink.uri]"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation. Use the defaultValue if the staging location is not secured."
            },
            "defaultValue": ""
        },
        "vnet-name": {
            "type": "string",
            "defaultValue": "sample-vnet"
        },
        "vnet-prefix": {
            "type": "string",
            "metadata": {
                "description": "IP prefix (first 2 octets for this sample, e.g. 10.1)."
            }
        }
    },
    "variables": {
        "vnet-address-space": "[concat(parameters('vnet-prefix'),'.0.0/16')]",
        "subnets": [
            {
                "name": "mysubnet1",
                "addressPrefix": "[concat(parameters('vnet-prefix'), '.1.0/24')]",
                "additionalParameters": {},
                "linkNsg": true
            },
            {
                "name": "mysubnet2",
                "addressPrefix": "[concat(parameters('vnet-prefix'), '.2.0/24')]",
                "additionalParameters": {},
                "linkNsg": true
            },
            {
                "name": "mysubnet3",
                "addressPrefix": "[concat(parameters('vnet-prefix'), '.3.0/24')]",
                "additionalParameters": {},
                "linkNsg": true
            },
            {
                "name": "GatewaySubnet",
                "addressPrefix": "[concat(parameters('vnet-prefix'), '.255.224/27')]",
                "comments": "Additional parameters will be passed through to the UDR and NSG templates",
                "additionalParameters": {},
                "linkNsg": false
            }
        ]
    },
    "resources": [
        {
            "name": "[parameters('vnet-name')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "subnet-udr-dependency-loop",
                "subnet-nsg-dependency-loop"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnet-address-space')]"
                    ]
                },
                "copy": [
                    {
                        "name": "subnets",
                        "count": "[length(variables('subnets'))]",
                        "input": {
                            "name": "[variables('subnets')[copyIndex('subnets')].name]",
                            "properties": {
                                "addressPrefix": "[variables('subnets')[copyIndex('subnets')].addressPrefix]",
                                "networkSecurityGroup": {
                                    "id": "[if(equals(add(copyIndex('subnets'),1),length(variables('subnets'))),'',reference(concat(toLower(variables('subnets')[copyIndex('subnets')].name),'-nsg-dependencies')).outputs.NsgResourceId.value)]"
                                },
                                "routeTable": {
                                    "id": "[reference(concat(toLower(variables('subnets')[copyIndex('subnets')].name),'-udr-dependencies')).outputs.UdrResourceId.value]"
                                }
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(toLower(variables('subnets')[copyIndex('subnet-nsg-dependency-loop')].name),'-nsg-dependencies')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [],
            "copy": {
                "name": "subnet-nsg-dependency-loop",
                "count": "[length(variables('subnets'))]"
            },
            "comments": "Generate the NSG resource for each of the subnets.",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/subnet-',toLower(variables('subnets')[copyIndex('subnet-nsg-dependency-loop')].name),'-nsg.json',parameters('_artifactsLocationSasToken')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "subnet-name": {
                        "value": "[variables('subnets')[copyIndex('subnet-nsg-dependency-loop')].name]"
                    },
                    "additional-parameters": {
                        "value": "[variables('subnets')[copyIndex('subnet-nsg-dependency-loop')].additionalParameters]"
                    }
                }
            }
        },
        {
            "name": "[concat(toLower(variables('subnets')[copyIndex('subnet-udr-dependency-loop')].name),'-udr-dependencies')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [],
            "copy": {
                "name": "subnet-udr-dependency-loop",
                "count": "[length(variables('subnets'))]"
            },
            "comments": "Generate the UDR resource for each of the subnets.",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/subnet-',toLower(variables('subnets')[copyIndex('subnet-udr-dependency-loop')].name),'-udr.json',parameters('_artifactsLocationSasToken')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "subnet-name": {
                        "value": "[variables('subnets')[copyIndex('subnet-udr-dependency-loop')].name]"
                    },
                    "additional-parameters": {
                        "value": "[variables('subnets')[copyIndex('subnet-udr-dependency-loop')].additionalParameters]"
                    }
                }
            }
        }
    ]
}